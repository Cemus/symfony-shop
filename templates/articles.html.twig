{% extends 'base.html.twig' %} {% block title %}Articles - Super Site{% endblock
%} {% block body %}

<main class="grid grid-cols-3 gap-2 p-2">
  {% for article in articles %}
  <article
    class="flex flex-col justify-between border-2 border-cyan-300 p-2 gap-2"
  >
    <header class="text-center">
      <h2>
        {{ article.title }} <span>({{ article.id }})</span>
      </h2>
    </header>
    <section>
      <p>{{ article.content }}</p>
    </section>

    <footer class="flex flex-col justify-between gap-1">
      <div class="flex justify-between">
        <p>
          <span>{{ article.author.firstname }} </span>
          <span>{{ article.author.lastname }} </span>
        </p>

        <p>
          {{ article.createAt |date("d/m/Y")  }}
        </p>
      </div>

      <ul class="flex gap-1 justify-center">
        {% for cat in article.categories %} {% if loop.last %}
        <li>{{ cat.name }}</li>
        {% else %}
        <li>{{ cat.name }} -</li>
        {% endif %} {% endfor %}
      </ul>
    </footer>
  </article>
  {% endfor %}
</main>

{% endblock %}
