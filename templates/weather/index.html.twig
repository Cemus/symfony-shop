{% extends 'base.html.twig' %} {% block title %}Le temps ! {% endblock %} {%
block body %}
<main class="flex flex-col flex-1 items-center justify-center">
  <div
    class="flex flex-col gap-4 bg-cyan-200 p-10 rounded-md justify-between shadow-lg"
  >
    <h2 class="bolder text-lg">Météo</h2>

    <div class="flex flex-col items-center justify-start text-center gap-2">
      <h3>Ville</h3>
      <p>{{ weather.name }}</p>
      <h3>Température (C°)</h3>
      <p>{{ weather.main.temp - 273.15 }} °C</p>
      <h3>Pays</h3>
      <p>{{ weather.sys.country }}</p>
    </div>
  </div>
</main>
{% endblock %}
