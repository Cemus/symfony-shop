{% extends 'base.html.twig' %}
{% block title %}Le temps !
{% endblock %}
{%
block body %}
	<main class="flex flex-col flex-1 items-center justify-center">
		<div class="flex flex-col gap-4 bg-cyan-200 p-10 rounded-md justify-between shadow-lg">
			<h2 class="font-bold text-lg text-cyan-800">Météo</h2>

			<div class="flex flex-col items-center gap-2">
				<header>
					<h2 class="font-bold">{{ weather.name }}</h2>
					<img src='https://openweathermap.org/img/wn/{{ weather.weather[0].icon }}@2x.png' alt={{ weather.weather[0].description }}/>
				</header>
				<hr>
				<div>
					<h3 class="font-semibold">Température (C°)</h3>
					<p>{{ weather.main.temp }}
						°C</p>
					<h3 class="font-semibold">Pays</h3>
					<p>{{ weather.sys.country }}</p>
				</div>

			</div>
		</div>
	</main>
{% endblock %}
